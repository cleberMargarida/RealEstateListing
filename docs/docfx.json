{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/RealEstateListing.API/**/*.csproj",
            "src/RealEstateListing.Application/**/*.csproj",
            "src/RealEstateListing.Domain/**/*.csproj",
            "src/RealEstateListing.Infrastructure/**/*.csproj"
          ],
          "exclude": ["**/bin/**", "**/obj/**"],
          "src": "../"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "properties": { "TargetFramework": "net10.0" },
      "enumSortOrder": "alphabetic",
      "includePrivateMembers": false,
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**", "obj/**", "filterConfig.yml"]
      }
    ],
    "resource": [
      { "files": ["images/**"], "exclude": ["_site/**", "obj/**"] }
    ],
    "output": "../bin/docs",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "Real Estate Listing API Documentation",
      "_appName": "Real Estate Listing API",
      "_appLogoPath": "images/logo.png",
      "_enableSearch": true,
      "_appFooter": "<span>Maintained by <a href=\"https://github.com/cleberMargarida\">Cleber Margarida</a>.</span>",
      "_gitContribute": { "repo": "https://github.com/cleberMargarida/real-estate-listing", "branch": "master" }
    },
    "fileMetadata": {
      "_gitContribute": {
        "**/*.md": { "repo": "https://github.com/cleberMargarida/real-estate-listing", "branch": "master" }
      }
    }
  }
}
